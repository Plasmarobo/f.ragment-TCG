!!!
%html
  %head
    %title f.ragment
    %link{href: "http://fonts.googleapis.com/css?family=Varela",rel: "stylesheet",type: "text/css"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#navbar-collapse-1"}
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %a.navbar-brand{href: "#"}
          f.ragment
      .collapse.navbar-collapse{id: "navbar-collapse-1"}
        %ul.nav.navbar-nav
          %li.dropwdown
            %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"} 
              Games
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to "New", '/games/new'
              %li
                = link_to "Play", '/games/play'
              %li
                = link_to "Manage", '/games/manage'
          - if user_signed_in?
            %li
              = link_to "#{current_user.name}", controller: :users, action: :account
            %li
              = link_to "Logout", contoller: :users, action: :logout
          - else
            .navbar-right
              %form.navbar-form{role: "login", url: user_session_path}
                .form-group
                  %input.form-control{type: "text", placeholder: "Username", name: "username"}
                  %input.form-control{type: "password", placeholder: "Password", name: "password"}
                %button.btn.btn-default{type: "submit"}
                  Login
              .f_ragment_stack_container
                .f_ragment_stack    
                  = link_to "Forgot password?", new_password_path(:user)
                .f_ragment_stack
                  = link_to "Register", new_user_registration_path
    .f_ragment_header_block
      .glitch{"data-text" => "f.ragment"} f.ragment
    .f_ragment_alert_block
      - if notice
        .alert.alert-success.notice
          = notice
      - if alert
        .alert.alert-danger
          = alert
    = yield
    .f_ragment_footer
      COPYRIGHT (c) Austen Higgins-Cassidy 2014
      = link_to "Privacy", '/landing/privacy'
      = link_to "Terms of Service", '/landing/tos'
      = link_to "About", '/landing/about'
      = link_to "Contact", '/landing/contact'